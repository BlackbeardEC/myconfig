!!!!!Colorz!!!!!
#include "/home/blackbeard/.Xcolors"

URxvt.perl-ext-common: default,matcher,vtwheel,font-size
URxvt.url-launcher: /bin/firefox
!URxvt.url-launcher: /usr/bin/qutebrowser
URxvt.matcher.button: 1
! chdir to always open in ~ in case I startx from somewhere else
URxvt.chdir: /home/blackbeard/

URxvt.font: xft:DejaVuSansMono Nerd Font Mono:style=Book:size=12
URxvt.boldFont: xft:DejaVu Sans Mono:style=Bold:size=14,xft:SauceCodePro Nerd Font Mono:style=Bold:size=14

URxvt.fading: 0
URxvt.scrollBar: None
URxvt*scrollBar: false
URxvt*scrollBar_right: false
URxvt*scrollBar_floating: false
!URxvt.termName: rxvt-256color
URxvt.termName: rxvt-unicode-256color
URxvt.internalBorder: 2
!URxvt.letterSpace: 3

! font-size binds
URxvt.keysym.C-Up:     font-size:increase
URxvt.keysym.C-Down:   font-size:decrease
URxvt.keysym.C-S-Up:   font-size:incglobal
URxvt.keysym.C-S-Down: font-size:decglobal
URxvt.keysym.C-equal:  font-size:reset
URxvt.keysym.C-slash:  font-size:show

!! URXVT transparency
! URxvt.depth: 32
! URxvt.background: rgba:0000/0000/0200/d800
! URxvt.borderColor: rgba:0000/0000/0200/d800
! urxvt*transparent: true
! urxvt*shading: 10

background=$(xrdb -query | grep -E "^\*\.background" | cut -d':' -f2 | sed -e 's/^[[:space:]]*//')
!!! DWM COLORS !!!
!!! Moved to ~/.Xcolors from inside the colterm GO program
! dwm.normbordercolor: #545466
! dwm.normbgcolor: #0E101C
! dwm.normfgcolor: #8c5760
! dwm.selbordercolor: #8c5760
! dwm.selbgcolor: #0E101C
! dwm.selfgcolor: #8c5760

!!! ST !!!
! These options only take effect on startup.
st.termname:     st-256color
!st.font:    Inconsolata Nerd Font Mono:pixelsize=18:antialias=true
st.font:    DejaVuSansMono Nerd Font Mono:pixelsize=16:antialias=true
! The following options options can be reloaded via USR1 signal.
!st.font:              Liberation Mono:pixelsize=16:antialias=true:autohint=true;
st.borderpx:          10
! Available cursor values: 2 4 6 7 = █ _ | ☃ ( 1 3 5 are blinking versions)
st.cursorshape:       2
! thickness of underline and bar cursors
st.cursorthickness:   2
! 0: normal blinking, 1: leave cursor border and blink with cursors background
st.cursorblinkstyle:  0
! 0: cursor blinks with a constant interval; 1: blinking cycle resets on key input
st.cursorblinkontype: 1
st.bold_font:         0
st.xfps:              120
st.actionfps:         30
! Amount of lines scrolled
st.mouseScrollLines:  1
! Kerning / character bounding-box height multiplier
st.chscale:           1.0
! Kerning / character bounding-box width multiplier
st.cwscale:           1.1
! opacity==255 means what terminal will be not transparent, 0 - fully transparent
st.opacity:      255

!st.background: #142429
!st.foreground: #98C196
!st.color0: #325C4B
!st.color1: #BD4D33
!st.color2: #26B64E
!st.color3: #D4BE45
!st.color4: #0E34B6
!st.color5: #7243B3
!st.color6: #3CB7C9
!st.color7: #DDE9DF
