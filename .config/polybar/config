; Spotify script to replace MPD/Mopidy to see if MPD is causing crash in 7dtd
[module/spotify]
type = custom/script
interval = 1
format-prefix = "‚ôâÓÉ¨ "
format = %{A1:playerctl play-pause:}<label>%{A}
exec = python ~/.config/polybar/scripts/spotify_status.py -p 'ÔÅã,ÔÅå' -t 42 -f ' {play_pause}  {song} - {artist} - {album}'
format-underline = #1db954

[module/mpd-vol]
type = custom/script
format = <label>
exec = mpc volume | awk -F " " '{print $2}'
label = ÔÄ® %output%
scroll-up = mpc volume +5
scroll-down = mpc volume -5

